<!--//////////////////// content ////////////-->

  <div class="content">
    <div class="container">
      <div class="row">
        <div class="filter_container d-none d-md-block col-3">
          <div class="filter_wr">

            <span class="about">Фильтры товаров</span>    
            
            <!-- Бренды -->
            <div class="title d-flex justify-content-between align-items-center" onclick="show_hide('filter_brand')">
              <b>Бренды</b>
              <i class="fa fa-chevron-up" aria-hidden="true"></i>
            </div>

           <div class="filter_brand" id="filter_brand">
              <div class="input-group">
                <input type="text" class="form-control" id="inlineFormInputGroupUsername2" placeholder="Поиск фильтра">
              </div>
              <div class="scroll-bar no-margin">
                <ul>
                  <li>
                      <input class="form-check-input" type="checkbox" value="" id="defaultCheck3">
                      <label class="form-check-label label_checkbox" for="defaultCheck3">
                        Lindt
                      </label>
                  </li>
                  <li>
                      <input class="form-check-input" type="checkbox" value="" id="defaultCheck4">
                      <label class="form-check-label label_checkbox" for="defaultCheck4">
                        Milka
                      </label>
                  </li>
                  <li>
                      <input class="form-check-input" type="checkbox" value="" id="defaultCheck5">
                      <label class="form-check-label label_checkbox" for="defaultCheck5">
                        Millenium
                      </label>
                  </li>
                  <li>
                      <input class="form-check-input" type="checkbox" value="" id="defaultCheck6">
                      <label class="form-check-label label_checkbox" for="defaultCheck6">
                        Roshen
                      </label>
                  </li>
                  <li>
                      <input class="form-check-input" type="checkbox" value="" id="defaultCheck7">
                      <label class="form-check-label label_checkbox" for="defaultCheck7">
                        Spell
                      </label>
                  </li>
                </ul>
              </div>
           </div>

          </div>
        </div>

        <div class="col-12 col-md-9 no-margin">
          <div class="item_container" id="items_container">
            <div class="col-sm-6 col-md-4 col-xl-3 item">
              
              <div class="info d-flex justify-content-between">
                <span class="code_item">Код товара: 1951</span>
                <span class="status">В наличии</span>
              </div>

              <div class="img_wr">
                <img id="" src="public/img/item_1.png" alt="">
              </div>

              <div class="stars_container">
                <i class="star fas fa-star star_btn"></i>
                <i class="star far fa-star star_btn"></i>
                <i class="star far fa-star star_btn"></i>
                <i class="star far fa-star star_btn"></i>
                <i class="star far fa-star star_btn"></i>
                <span class="number_ratings">Отзывы: 0</span>
              </div>

              <div class="title_wr">
                <!-- <span class="title_item"><b>Twix •</b></span> -->
                <span class="name_item">Набор из 32-х батончиков с арахисом.</span>
              </div>

              <div class="block_price d-flex justify-content-between align-items-center">
                <div class="price_wr d-flex">
                  <!-- <div class="price">
                    120грн
                  </div> -->
                  <span class="promotional_price">95грн</span>
                  <span class="line-through_price">181 грн</span>
                </div>
                <div class="btn_wr">
                  <button type="button" class="btn btn-secondary btn_buy">В корзину</button>
                </div>
              </div>

              <div class="additional_information">
                <span class="font-weight-bold">Тип изделия: <span class="font-weight-normal">Бумажная</span></span>
                
                <span class="font-weight-bold">Упаковка: <span class="font-weight-normal">Напиток</span></span>
               
                <span class="font-weight-bold">Производитель: <span class="font-weight-normal">Twix</span></span>
                     
                <span class="font-weight-bold">Cтрана-производитель: <span class="font-weight-normal">Украина</span></span>
                      
                <span class="font-weight-bold">Особенности: <span class="font-weight-normal">Без ГМО, Диетические</span></span>
              </div> 
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


